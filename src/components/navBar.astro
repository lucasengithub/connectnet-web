---
import ButtonGreen from "./ButtonGreen.astro";
import ButtonBlack from "./ButtonBlack.astro";
---

<style>
    section {
        position: fixed;
        align-items: center;
        justify-content: space-between;
        left: 8px;
        right: 8px;
        top: 8px;
        border-radius: 19px;
        background-color: rgb(0, 0, 0, 0.6);
        backdrop-filter: blur(8px);
        display: flex;
        flex-direction: row;
        padding: 10px;
        img {
            height: 32px;
            width: auto;
        }
        div {
            display: flex;
            flex-direction: row;
            gap: 10px;
        }
    }
</style>
<section>
    <img src="/net_logo.svg" alt="connectnet" onclick="window.location = '/'" />
    <b>W.I.P (BETA)</b>
    <div>
        <ButtonBlack
            texto="Recibir Pantalla"
            onclick="window.open('https://pantalla.systemconnect.lucaspeinado.es/recibir/')"
        />
        <ButtonGreen
            texto="Enviar Pantalla"
            onclick="window.location = '/send'"
        />
    </div>
</section>
