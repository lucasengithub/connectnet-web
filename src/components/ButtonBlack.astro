---
const { texto, onclick, id } = Astro.props;
---

<style>
    button {
        background-color: darkslategrey;
        border-radius: 12px;
        border: none;
        outline: 1px solid darkslategrey;
        outline-offset: 1px;
        font-size: medium;
        padding: 10px 15px;
        color: white;
    }
</style>
<button id={id} onclick={onclick}>{texto}</button>
